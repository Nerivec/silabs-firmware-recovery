{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "ts-node": {
        "esm": true
    }
}
