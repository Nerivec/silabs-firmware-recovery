{
    "name": "silabs-firmware-recovery",
    "description": "Tools to help in the recovery of misbehaving/bricked devices",
    "version": "0.2.0",
    "author": "Nerivec",
    "bugs": "https://github.com/Nerivec/silabs-firmware-recovery/issues",
    "devDependencies": {
