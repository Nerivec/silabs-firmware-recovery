        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=22.12.0"
    },
    "homepage": "https://github.com/Nerivec/silabs-firmware-recovery",
    "keywords": [
        "zigbee",
        "silabs",
        "silicon-labs",
        "ember",
        "emberznet",
        "zigbee2mqtt",
        "ezsp",
        "bricked",
        "z2m"
    ],
    "license": "GPL-3.0-or-later",
    "main": "dist/index.js",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nerivec/silabs-firmware-recovery.git"
    },
    "scripts": {
